{
    "name": "xpdo/xpdo",
    "description": "A PDO-based Object/Relational Bridge Library",
    "homepage": "http://www.xpdo.org/",
    "type": "library",
    "license": "GPL-2.0+",
    "minimum-stability": "dev",
    "authors": [
        {
            "name": "Jason Coward",
            "email": "jason@opengeek.com",
            "homepage": "http://www.jasoncoward.com/",
            "role": "Developer"
        }
    ],
    "require": {
        "php": ">=5.6",
        "symfony/console": "~2.8|~3.4",
        "container-interop/container-interop": "^1.1"
    },
    "require-dev": {
        "phpunit/phpunit": "~3.7.0"
    },
    "suggest": {
        "ext-redis": "Allows caching using Redis"
    },
    "autoload": {
        "psr-0": {
            "xPDO": ["src/", "test/"]
        }
    },
    "bin": [
        "bin/xpdo",
        "bin/xpdo.php"
    ],
    "extra": {
        "branch-alias": {
            "dev-develop": "3.0.x-dev"
        }
    }
}
